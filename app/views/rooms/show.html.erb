<%= form_tag(search_rooms_path, method: :get) do %>
    <%= text_field_tag :area, params[:area], placeholder: "エリアを入力してください" , class: "text_field"  %>
    <%= text_field_tag :keyword, params[:keyword], placeholder: "キーワードを入力してください" , class: "text_field"  %>
    <%= submit_tag "検索" %>
  <% end %>

  <div class="button">    
  <%= link_to "← 戻る", :back %></td>
  <%= link_to "施設情報を編集", edit_room_path(@room) if @room.user == current_user %>
  </div>


  <div class="row">
  <div class="col-md-6">
    <!-- 施設画像 -->
    <% if @room.image.attached? %>
      <%= image_tag @room.image, alt: "Room image", class: "RoomDetails__image" %>
    <% else %>
      <%= image_tag "default-image.png", alt: "Default room image" , class: "RoomDetails__image" %>
    <% end %>
  </div>
  <%= render "shared/error", obj: @reservation %>
  <div class="col-md-6">
    <!-- 施設情報 -->
    <h2><%= @room.name %></h2>
    <p>値段: <%= @room.price %>円</p>
    <p>住所: <%= @room.address %></p>
    <p>説明: <%= @room.description %></p>
    <!-- チェックイン日、チェックアウト日、人数 -->
    <%= form_for @reservation, url: reservations_path do |f| %>
      <%= f.hidden_field :room_id, value: @room.id %>
      <p>チェックイン日: <%= f.date_field :check_in_date %></p>
      <p>チェックアウト日: <%= f.date_field :check_out_date %></p>
      <p>人数: <%= f.number_field :num_of_guests %>人</p>
      <%= f.submit "予約する", class: "btn btn-primary" %>
    <% end %>    
  </div>
</div>
